@page "/stack"
@page "/stack/{StackId:guid}"
@attribute [Authorize]

@using Microsoft.FSharp.Core
@using CardOverflow.Entity
@using CardOverflow.Debug
@using CardOverflow.Pure
@using CardOverflow.Api
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Identity
@using CardOverflow.Sanitation
@inject IToastService ToastService
@inject DbExecutor DbExecutor
@inject NavigationManager NavigationManager
@inject UserProvider UserProvider

<div class="d-flex justify-content-between align-items-center">
  <SearchBar SearchClicked="@SearchClicked" BackLink="/my/concept" CreateLink=@(x => $"/my/concept?revision={x}") Ids=@cards?.Select(x => x.RevisionMeta.Id.ToString())?.Distinct()?.ToList() SelectedId=@StackId.ToString() Query=@search.Query />
</div>
@if (StackId == null) {
  <div>
    @if (cards == null) {
      <p><em>Loading...</em></p>
    } else {
      <table class="table">
        <tr>
          <th>Preview</th>
          <th>Name</th>
          <th style="min-width: 4rem;">Due</th>
          <th>Tags</th>
        </tr>
        @foreach (var card in cards) {
          <tr>
            <td>
              <HoverPreview IsCollected=@card.RevisionMeta.IsCollected>
                <ResizingIframeExample RevisionId=@card.RevisionMeta.Id MaxIndexInclusive=@card.RevisionMeta.MaxIndexInclusive Front />
              </HoverPreview>
            </td>
            <td>
              <a href="/my/concept?revision=@card.RevisionMeta.Id">
                @card.RevisionMeta.StrippedFront
              </a>
            </td>
            <td>
              <Due DueDate=@card.Due />
            </td>
            <td>
              @(string.Join(", ", card.Tags))
            </td>
          </tr>
        }
      </table>
    }
    <Pager Details=@details PageChanged=@PageChanged />
  </div>
} else {
  <Curate_Example StackId=@StackId.Value />
}

@code {
  private Guid? _userId;
  [Parameter] public Guid? StackId { get; set; }
  private SearchCommand search = new SearchCommand("", SearchOrder.Popularity);
  private List<Card> cards;
  private PagedListDetails details;

  public override async Task SetParametersAsync(ParameterView parameters) {
    await base.SetParametersAsync(parameters);
    if (await UserProvider.IsAuthenticated()) {
      if (StackId == null && cards == null) {
        await PageChanged(1);
      }
      if (StackId != null) {
        if (cards == null || (cards != null && !cards.Any(card => card.RevisionMeta.Id == StackId.Value))) {
          var x = await DbExecutor.QueryAsync(db => CardRepository.getCollectedRevisionFromRevision(db, Guid.Empty, StackId.Value));
          if (x.IsOk) {
            if (StackId != x.ResultValue) {
              NavigationManager.NavigateTo($"my/concept?revision={x.ResultValue}");
            } else {
              StackId = x.ResultValue;
            }
          } else {
            StackId = null;
            ToastService.ShowError(x.ErrorValue);
          }
        }
      }
    }
    StateHasChanged();
  }

  async Task PageChanged(int pageNumber) {
    var pagedList = await DbExecutor.QueryAsync(db => SanitizeConceptRepository.GetCollectedPages(db, Guid.Empty, pageNumber, search));
    details = pagedList.Details;
    cards = pagedList.Results.Where(x => x.IsOk).Select(x => x.ResultValue).ToList();
    if (pagedList.Results.Any(x => x.IsError)) {
      foreach (var error in pagedList.Results.Where(x => x.IsError).Select(x => x.ErrorValue)) {
        ToastService.ShowError(error);
      }
      ToastService.ShowError("Please contact us with these errors.");
    }
  }

  Task SearchClicked(SearchCommand newSearch) {
    StackId = null;
    search = newSearch;
    return PageChanged(1);
  }

}
